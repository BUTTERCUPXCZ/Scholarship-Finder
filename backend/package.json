{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run clean && tsc",
    "build:safe": "npm run clean:fallback && npm run ensure-types && tsc --skipLibCheck",
    "build:render": "npm install --include=dev && npx prisma generate && tsc",
    "clean": "npx rimraf dist",
    "clean:fallback": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true});\"",
    "start": "node dist/index.js",
    "start:prod": "npm run build && npm run start",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:deploy": "prisma migrate deploy",
    "type-check": "tsc --noEmit",
    "ensure-types": "npm install --save-dev @types/express @types/jsonwebtoken @types/node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "@supabase/supabase-js": "^2.57.4",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "socket.io": "^4.8.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "pm2": "^6.0.13",
    "rimraf": "^5.0.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}